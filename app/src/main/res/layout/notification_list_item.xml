<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notification"
            type="models.Notification" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notification_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="none"
                android:hint="Test Message"
                android:inputType="none"
                android:maxLines="2"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/notification_guild_line"
                app:layout_constraintStart_toEndOf="@id/notification_image" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:ellipsize="none"
                android:hint="2020-03-01 12:14:25"
                android:inputType="none"
                android:maxLines="2"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/notification_guild_line"
                app:layout_constraintStart_toEndOf="@id/notification_image" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/notification_guild_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>